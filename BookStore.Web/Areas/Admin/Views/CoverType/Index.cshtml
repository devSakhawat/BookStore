@model IEnumerable<CoverType>

<div class="container">
   <div class="row">
      <div class="col-6">
         <h2>Cover Type List</h2>
      </div>
      <div class="col-6 text-end">
         <a class="btn btn-primary" asp-action="Create">Add CoverType</a>
      </div>
   </div>
   <div class="row">
      <table class="table table-responsive table-striped">
         <thead>
            <tr>
               <th style="width:50%">Name</th>
               <th style="width:20%">Action</th>
            </tr>
         </thead>
         <tbody>
            @foreach (var item in Model)
            {
               <tr>
                  <td>@item.Name</td>
                  <td>
                     <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2" style="width:150px"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2" style="width:150px"> <i class="bi bi-trash-fill"></i> Delete</a>
                     </div>
                  </td>
               </tr>
            }
         </tbody>
      </table>
   </div>
</div>