@model Category

<div class="container">
   <div class="row">
      <div class="col-6">
         <h2>Create Category</h2>
      </div>
      <div class="col-6"></div>
   </div>

   <div class="row">
      <form method="post" enctype="multipart/form-data">

         <div asp-validation-summary="All"></div>
         <div class="form-group row">
            <label class="col-sm-2 col-form-label" asp-for="Name"></label>
            <div class="col-sm-10">
               <input asp-for="Name" class="form-control" />
               <span asp-validation-for="Name"></span>
            </div>
         </div>

         <div class="row form-group">
            <label class="col-sm-2 col-form-label" asp-for="DisplayOrder"></label>
            <div class="col-sm-10">
               <input asp-for="DisplayOrder" class="form-control" />
               <span asp-validation-for="DisplayOrder"></span>
            </div>
         </div>
         <div class="btn-group my-3" role="group">
            <button type="submit" class="btn btn-secondary" style="width:150px">Save</button>
            <a asp-action="Index" class="btn btn-secondary mx-2" style="width:150px">Back to List</a>
         </div>         
      </form>
   </div>
</div>

@section Scripts
{
   @{
      <partial name="_ValidationScriptsPartial"/>
   }
}