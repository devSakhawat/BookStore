@model IEnumerable<Category>

<div class="container">
   <div class="row">
      <div class="col-6">
         <h2>Category List</h2>
      </div>
      <div class="col-6 text-end">
         <a class="btn btn-primary" asp-action="Create">Add Category</a>
      </div>
   </div>
   <div class="row">
      <table class="table table-responsive table-striped">
         <thead>
            <tr>
               <th style="width:50%">Name</th>
               <th style="width:30%">DisplayOrder</th>
               <th style="width:20%">Action</th>
            </tr>
         </thead>
         <tbody>
            @foreach (var item in Model)
            {
               <tr>
                  <td>@item.Name</td>
                  <td>@item.DisplayOrder</td>
                  <td>
                     <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary me-2" style="width:150px"> <i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" style="width:150px"> <i class="bi bi-trash-fill"></i> Delete</a>
                     </div>
                     @*<a class="btn btn-secondary mx-2" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i> Edit</a>*@
                     @*<a class="btn btn-info mx-2 my-2" asp-action="Detail" asp-route-id="@item.Id"><i class="bi bi-info-square-fill"></i>&nbsp; Detail</a>*@
                     @*<a class="btn btn-danger mx-2" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i>&nbsp; Delete</a>*@
                  </td>
               </tr>
            }
         </tbody>
      </table>
   </div>
</div>