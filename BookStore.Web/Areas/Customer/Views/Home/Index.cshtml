@model IEnumerable<BookStore.Models.Product>

<div class="row pb-3">
   @foreach (var item in Model)
   {
      <div class="col-lg-3 col-md-4 col-sm-6">
         <div class="row py-2">
            <div class="col-12">
               <div class="card">
                  <a asp-action="Details" asp-route-id="@item.Id">
                     <img src="@item.ImageUrl" class="card-img-top" alt="Product Image" style="height:350px">
                  </a>                 
                 <div class="card-body">
                   <h5 class="card-title text-primary">@item.Title</h5>
                   <h6 class="card-title text-info">@item.Author</h6>
                   <p class="card-text">List Price : <strike><b>$@item.ListPrice.ToString("0.00")</b></strike> </p>
                   <p class="card-text">As low as : <b>$@item.Price100.ToString("0.00")</b></p>
                 </div>
                 <div>
                     <a asp-action="Details" asp-route-productId="@item.Id" class="btn btn-primary d-block rounded-0">Details</a>
                 </div>
               </div>
            </div>
         </div>
      </div>
   }
</div>
